<!doctype html>
<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel='stylesheet' href='/stylesheets/style.css' />

        <title></title>
    </head>
    <body>

        <div class="sidenav">
            <div class="tabs">
                <a href="/assets" class="hover">  Assets</a>
                <a href="/users" class="hover">Users</a>
                <a href="/user_devices" class="hover">User Devices</a>
                <a href="#settings" class="hover">Settings</a>
            </div>
        </div>

        <div class="navigation">
              
            <a class="logout_button" href="/login">

                <img src="https://static.vecteezy.com/system/resources/thumbnails/002/318/271/small/user-profile-icon-free-vector.jpg">
          
                <div class="logout">LOGOUT</div>
        
            </a>
          
        </div>


        <div class="content">

            <div class="tab-content">

                <div class="tabs__tab active" id="tab_1" data-tab-info>
                
                    <% if(action == 'add') { %>

                    <div class="card">
                        <div class="card-header">users</div>
                        <div class="card-body">
                            <form method="POST" action="/users/add_users">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label>UserID</label>
                                            <input type="text" name="UserID" id="UserID" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label>Username</label>
                                            <input type="text" name="username" id="username" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label>Master User</label>
                                            <input type="text" name="master_user" id="master_user" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <input type="submit" name="submit_button" class="btn btn-primary" value="Add" />
                                </div>
                            </form>
                        </div>
                    </div>

                    <% } else if(action == 'edit') { %>
                    <div class="card">
                        <div class="card-header">users</div>
                        <div class="card-body">
                            <form method="POST" action="/users/edit/<%= sampleData.id %> ">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label>UserID</label>
                                            <input type="text" name="UserID" id="UserID" class="form-control" value="<%= sampleData.UserID %>" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label>Username</label>
                                            <input type="text" name="username" id="username" class="form-control" value="<%= sampleData.username %>" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label>Master User</label>
                                            <input type="text" name="master_user" id="master_user" class="form-control" value="<%= sampleData.master_user %>" />
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <input type="submit" name="submit_button" class="btn btn-primary" value="Edit" />
                                </div>
                            </form>
                        </div>
                    </div>
                    <% } else { %>
                        
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col">users</div>
                                <div class="col">
                                    <a href="/users/add" class="btn btn-sm float-end">
                                        <img src="https://cdn-icons-png.flaticon.com/128/3668/3668480.png">
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <tr>
                                        <th>UserID</th>
                                        <th>Username</th>
                                        <th>Master User</th>
                                        <th>Action</th>
                                    </tr>
                                    <%
                                    if(sampleData.length > 0)
                                    {
                                        sampleData.forEach(function(data){
                                    %>
                                    <tr>
                                        <td><%= data.UserID %></td>
                                        <td><%= data.username %></td>
                                        <td><%= data.master_user %></td>
                                        <td>

                                            <a href="/users/edit/<%= data.id %>" class="btn  btn-sm">
                                                <img src="https://cdn-icons-png.flaticon.com/512/6065/6065488.png">
                                            </a>

                                            <a href="/users/delete/<%= data.id %>" class="btn btn-sm">
                                                <img src="https://cdn-icons-png.flaticon.com/128/3096/3096673.png">
                                            </a>
                                            
                                        </td>
                                    </tr>
                                    <%
                                        });
                                    }
                                    else
                                    {
                                    %>
                                    <tr>
                                        <td colspan="5">No Data Found</td>
                                    </tr>
                                    <%
                                    }
                                    %>
                                </table>
                            </div>
                        </div>
                    </div>

                    <% } %>
                    
                
                </div>
            
            </div>

        </div> 

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    </body>
</html>